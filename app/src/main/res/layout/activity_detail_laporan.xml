<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context="org.bpbd.abed.sigab.detail_laporan"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="588dp"
        android:layout_weight="0.41">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageView2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/sigab_logo_baru" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewNama"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="0.10"
                        android:gravity="bottom"
                        android:text="Yohan Abednego"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textViewWaktu"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="50 Menit Yang Lalu"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"
                android:scaleType="center" />

            <TextView
                android:id="@+id/textViewLokasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aertembaga Satu, Aertembaga"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Jenis Bencana"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewJenisBencana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="- Banjir"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Korban"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="- Meninggal     "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewMeninggal"
                    android:layout_width="192dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:paddingStart="5dp"
                    android:text="10"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="- Luka Berat     "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewLukaBerat"
                    android:layout_width="192dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:paddingStart="3dp"
                    android:text="5"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="- Luka Ringan  "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewLukaRingan"
                    android:layout_width="192dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:paddingStart="5dp"
                    android:text="0"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Dampak Infrastruktur"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDampakInfrastrtuktur"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="15dp"
                android:text="LoremIpsum"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonTerima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="Terima"
                android:textColor="@color/cardview_light_background" />

            <Button
                android:id="@+id/buttonTolak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/holo_blue_dark"
                android:text="Tolak"
                android:textColor="@color/cardview_light_background" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
